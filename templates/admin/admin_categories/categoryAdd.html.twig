{% extends 'adminTemplate.html.twig' %}

{% block title %}
	{{ Page_title }}
{% endblock %}

{% block main %}
	{% if app.request.attributes.get('_route') == 'app_admin_categoriesAdd' %}
        <h2>Ajouter une catégorie</h2>
    {% elseif app.request.attributes.get('_route') == 'app_admin_categoriesUp' %}
        <h2>Modiffier la catégorie</h2>
    {% endif %}
	{{ form_start(categoryForm, {'attr': {'class':'row g-3'}}) }}

	<div class="mb-3">
		{{ form_widget(categoryForm.Category) }}
	</div>

	<div class="mb-3">
		{{ form_widget(categoryForm.icone_url) }}
	</div>

	<div class="col-md-6">
		{{ form_widget(categoryForm.color) }}
	</div>

	<input type="submit" class="col-12 btn btn-primary" value="Ajouter">
	{{ form_end(categoryForm) }}

{% endblock %}
