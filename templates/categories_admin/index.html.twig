{% extends 'adminTemplate.html.twig' %}

{% block title %}
	{{ Page_title }}
{% endblock %}

{% block main %}
	<h2>Les formations</h2>
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nom</th>
					<th scope="col">Formations li√©es</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.category }}</td>
						<td>
							<ul>
								{% for formation in category.formations %}
									<li>{{ formation.title }}</li>
								{% endfor %}
							</ul>
						</td>
						<td>
							<a href="{{ path('app_admin_categoriesUp', {id:category.id}) }}">Modiffier</a>
						</td>
						<td>
							<a href="{{ path('app_delete', {id:category.id,data:'categories'}) }}">Supprimer</a>
						</td>
					</tr>

				{% endfor %}

			</tbody>
		</table>

	</div>
{% endblock %}
